<Window x:Class="ApEngine.UIs.ScriptCalibration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ApEngine.UIs" x:Name="self"
        xmlns:ctrl="clr-namespace:ApEngine.Ctrls"
        mc:Ignorable="d" Title="Project Calibration"
        d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>

        <DockPanel DockPanel.Dock="Top" HorizontalAlignment="Right">
            <Button HorizontalAlignment="Right" Margin="2" Command="{Binding ElementName=self, Path=LoadScriptCalibData}">Load</Button>
            <Button HorizontalAlignment="Right" Margin="2" Command="{Binding ElementName=self, Path=NewScriptCalibData}">New</Button>
            <Button HorizontalAlignment="Right" Margin="2" Command="{Binding ElementName=self, Path=SaveScriptCalibData}">Save</Button>
            <Button HorizontalAlignment="Right" Margin="2" Command="{Binding ElementName=self, Path=SaveScriptCalibDataAs}">Save As</Button>
        </DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Foreground="Red" HorizontalAlignment="Right" ToolTip="The configure will change APx current setting">The Script will COERCE the script setting if the SignalPath/Measurement name is matched</StatusBarItem>
        </StatusBar>
        <TabControl ItemsSource="{Binding SignalPathCalibDatas}" SelectionChanged="TabControl_SelectionChanged">
            <TabControl.Resources>
                <Style TargetType="DataGrid"/>
                <Style TargetType="Button"/>
                <Style TargetType="GroupBox"/>
            </TabControl.Resources>
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Key}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ctrl:Ctrl_SignalPathCalib DataContext="{Binding Value}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </DockPanel>
</Window>
