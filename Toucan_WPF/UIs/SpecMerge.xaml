<Window x:Class="Toucan_WPF.UIs.SpecMerge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toucan_WPF.UIs"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="SpecMerge">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsAdded}" Value="True">
                    <Setter Property="Background" Value="LightGreen">
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMoved}" Value="True">
                    <Setter Property="Background" Value="LightBlue">
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsRemoved}" Value="True">
                    <Setter Property="Background" Value="Gray">
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsChanged}" Value="True">
                    <Setter Property="Background" Value="Yellow">
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="dgRowHeader" TargetType="DataGridRowHeader">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsAdded}" Value="True">
                    <Setter Property="Content">
                        <Setter.Value>
                            <mah:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE948;"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Background" Value="LightGreen"></Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsRemoved}" Value="True">
                    <Setter Property="Content">
                        <Setter.Value>
                            <mah:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74D;"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Background" Value="Gray"></Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMoved}" Value="True">
                    <Setter Property="Content">
                        <Setter.Value>
                            <mah:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8E5;"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Background" Value="LightBlue"></Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsChanged}" Value="True">
                    <Setter Property="Content">
                        <Setter.Value>
                            <mah:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE777;"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Background" Value="Yellow"></Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="Summary">
            <Grid DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="24"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0">Name</Label>
                <Label Grid.Row="0" Grid.Column="2">Version</Label>
                <Label Grid.Row="0" Grid.Column="4">Time</Label>
                <Label Grid.Row="1" Grid.Column="0">Part</Label>
                <Label Grid.Row="1" Grid.Column="2">Author</Label>
                <Label Grid.Row="1" Grid.Column="4">CheckValue</Label>
                <Label Grid.Row="2" Grid.Column="0">Note</Label>

                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Path=Name, Mode=OneWay}"/>
                <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding Path=Version, Mode=OneWay}"/>
                <TextBox Grid.Row="0" Grid.Column="5" Text="{Binding Path=Time, Mode=OneWay}" IsReadOnly="True" Focusable="False" Background="LightGray"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Path=PartNos, Mode=OneWay}"/>
                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding Path=Author, Mode=OneWay}" IsReadOnly="True" Focusable="False" Background="LightGray"/>
                <TextBox Grid.Row="1" Grid.Column="5" Text="{Binding Path=CheckValue, Mode=OneWay}" IsReadOnly="True" Focusable="False" Background="LightGray"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Path=Note}" Grid.ColumnSpan="5"/>

            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <DockPanel>
        <DockPanel Margin="2" DockPanel.Dock="Top">
            <Menu>
                <MenuItem Header="_File">
                    <MenuItem Header="_Open Base..." Command="{Binding OpenBase}"/>
                    <MenuItem Header="Open _Target..." Command ="{Binding OpenTarget}"/>
                    <MenuItem Header="_Save Target..." Command ="{Binding SaveTargetAs}"/>
                    <MenuItem Header="Merge Into Base And Save As..." Command="{Binding MergeAndSaveTargetAs}" ToolTip="合并后保存"/>
                </MenuItem>
            </Menu>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Label Background="Gray" Foreground="White">
                    <Label.Content>
                        <StackPanel Orientation="Horizontal" Background="Gray">
                            <!--<md:PackIcon Kind="Minus" ToolTip="Added" Height="12"/>-->
                            <mah:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE949;"/>
                            <TextBlock>Removed</TextBlock>
                        </StackPanel>
                    </Label.Content>
                </Label>
                <Label Background="Yellow">
                    <Label.Content>
                        <StackPanel Orientation="Horizontal">
                            <!--<md:PackIcon Kind="Update" ToolTip="Changed" Height="12"/>-->
                            <mah:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE777;"/>
                            <TextBlock>Changed</TextBlock>
                        </StackPanel>
                    </Label.Content>
                </Label>
                <Label Background="LightGreen">
                    <Label.Content>
                        <StackPanel Orientation="Horizontal">
                            <mah:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE948;"/>
                            <!--<md:PackIcon Kind="Add" ToolTip="Changed" Height="12"/>-->
                            <TextBlock>Added</TextBlock>
                        </StackPanel>
                    </Label.Content>
                </Label>
                <Label Background="LightBlue">
                    <Label.Content>
                        <StackPanel Orientation="Horizontal">
                            <!--<md:PackIcon Kind="Run" ToolTip="Changed" Height="12"/>-->
                            <mah:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8E5;"/>
                            <TextBlock>Moved</TextBlock>
                        </StackPanel>
                    </Label.Content>
                </Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2">
                
                <Button Command="{Binding OpenBase}" Margin="2" Content="{StaticResource OpenBase}"/>
                <Button Command="{Binding OpenTarget}" Margin="2" Content="{StaticResource OpenTarget}"/>
                <Button Command="{Binding SaveTargetAs}" Margin="2" Content="{StaticResource SaveTarget}" /> 
                <Button Command="{Binding MergeAndSaveTargetAs}" ToolTip="合并后保存" Margin="2" Content="{StaticResource MergePlusSave}" />
                <TextBox Text="{Binding Prefix}" MinWidth="80" ToolTip="不良代码前缀 Defect Prefix" VerticalAlignment="Center"></TextBox>
            </StackPanel>
        </DockPanel>

        <ScrollViewer>
            <UniformGrid Columns="2" DockPanel.Dock="Bottom" ScrollViewer.CanContentScroll="True">
                <DockPanel>
                    <Control Template="{StaticResource ResourceKey=Summary}" DockPanel.Dock="Top" DataContext="{Binding BaseSpec}"/>
                    <TabControl DockPanel.Dock="Bottom">
                        <TabItem Header="{Binding BaseFileName}" ToolTip="{Binding TargetPath}">
                            <DataGrid Name="dg_Base" DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Disabled"
                  AutoGenerateColumns="False" HeadersVisibility="All" RowHeaderStyle="{StaticResource dgRowHeader}"
                  ItemsSource="{Binding BaseLimits}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Index" Binding="{Binding Index, Mode=OneTime}" IsReadOnly="True" CanUserSort="False"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Limit.Name}" CanUserSort="False"/>
                                    <DataGridTextColumn Header="Defect Code" Binding="{Binding Limit.Defect, Mode=TwoWay}" CanUserSort="False"/>
                                    <DataGridTextColumn Header="USL" Binding="{Binding USL, Mode=OneTime}" IsReadOnly="True" CanUserSort="False"/>
                                    <DataGridTextColumn Header="LSL" Binding="{Binding LSL, Mode=OneTime}" IsReadOnly="True" CanUserSort="False"/>
                                    <DataGridTextColumn Header="Unit" Binding="{Binding Limit.Unit, Mode=TwoWay}" CanUserSort="False"/>
                                    <DataGridTemplateColumn Header="Sfc" CanUserSort="False">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding Limit.Sfc, Mode=TwoWay}"></CheckBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Skip" CanUserSort="False">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding Limit.Skip, Mode=TwoWay}"></CheckBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>
                </DockPanel>
                <DockPanel>
                    <Control Template="{StaticResource ResourceKey=Summary}" DockPanel.Dock="Top" DataContext="{Binding TargetSpec}"/>
                    <TabControl DockPanel.Dock="Bottom">
                        <TabItem Header="{Binding TargetFileName}" ToolTip="{Binding TargetPath}">
                            <DataGrid Name="dg_Target" DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Disabled"
                  AutoGenerateColumns="False" HeadersVisibility="All" RowHeaderStyle="{StaticResource dgRowHeader}"
                  ItemsSource="{Binding TargetLimits}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Index" Binding="{Binding Index, Mode=OneTime}" IsReadOnly="True" CanUserSort="False"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Limit.Name}" IsReadOnly="True" CanUserSort="False"/>
                                    <DataGridTextColumn Header="Defect Code" Binding="{Binding Limit.Defect, Mode=TwoWay}" CanUserSort="False"/>
                                    <DataGridTextColumn Header="USL" Binding="{Binding USL, Mode=OneTime}" IsReadOnly="True" CanUserSort="False"/>
                                    <DataGridTextColumn Header="LSL" Binding="{Binding LSL, Mode=OneTime}" IsReadOnly="True" CanUserSort="False"/>
                                    <DataGridTextColumn Header="Unit" Binding="{Binding Limit.Unit, Mode=TwoWay}" CanUserSort="False"/>
                                    <DataGridTemplateColumn Header="Sfc" CanUserSort="False">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding Limit.Sfc, Mode=TwoWay}"></CheckBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Skip" CanUserSort="False">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding Limit.Skip, Mode=TwoWay}"></CheckBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>
                </DockPanel>
            </UniformGrid>
        </ScrollViewer>
    </DockPanel>
</Window>
