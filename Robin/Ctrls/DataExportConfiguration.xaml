<UserControl x:Class="Robin.Ctrls.DataExportConfiguration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Robin.Ctrls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <TabControl ItemsSource="{Binding}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <DataGrid ItemsSource="{Binding ExportDataConfig}" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True"></DataGridTextColumn>
                            <DataGridCheckBoxColumn Header="SpecSheet" Binding="{Binding}"></DataGridCheckBoxColumn>
                            <DataGridCheckBoxColumn Header="Database" Binding="{Binding}"></DataGridCheckBoxColumn>
                            <DataGridTemplateColumn Header="Channels">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="btn_SelectChannels_Click">...</Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridCheckBoxColumn Header="Specification" Binding="{Binding}"></DataGridCheckBoxColumn>
                            <DataGridCheckBoxColumn Header="Vacs Cartsian" Binding="{Binding}"></DataGridCheckBoxColumn>
                            <DataGridCheckBoxColumn Header="Vacs Contour" Binding="{Binding}"></DataGridCheckBoxColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
        
    </DockPanel>
</UserControl>
