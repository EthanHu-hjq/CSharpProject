<Window x:Class="ToucanCore.UIs.LogAnalysis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToucanCore.UIs"
             mc:Ignorable="d" Title="Log Analysis"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="2">
        <DockPanel DockPanel.Dock="Top" Margin="2">
            <Label Width="48">Path:</Label>
            <Button DockPanel.Dock="Right" Width="54" Click="OpenLog_Click">...</Button>
            <TextBox x:Name="tb_Path"></TextBox>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="2">
            <Label Width="48">Filter:</Label>
            <Button DockPanel.Dock="Right" Width="54" Click="Refresh_Click">Refresh</Button>
            <ComboBox x:Name="cb_Filter" IsEditable="True" SelectionChanged="FilterChanged"></ComboBox>
        </DockPanel>
        <TextBox Margin="2" x:Name="tb_Content"></TextBox>
    </DockPanel>
</Window>
