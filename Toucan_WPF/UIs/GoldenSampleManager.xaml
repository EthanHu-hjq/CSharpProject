<Window x:Class="Toucan_WPF.UIs.GoldenSampleManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toucan_WPF.UIs"
        mc:Ignorable="d" Name="self" Topmost="True"
        Title="Golden Sample Manager" Height="450" Width="400">
    <DockPanel IsEnabled="{Binding ElementName=self, Path=IsEditable}">
        <Button DockPanel.Dock="Top" HorizontalAlignment="Right" Margin="4" Click="btn_Save_Click">Save</Button>
        <DataGrid ItemsSource="{Binding ElementName=self, Path=Samples}" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" DockPanel.Dock="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Serial Number" Binding="{Binding SerialNumber}" IsReadOnly="False"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
    </DockPanel>
</Window>
