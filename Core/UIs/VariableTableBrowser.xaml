<Window x:Class="ToucanCore.UIs.VariableTableBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToucanCore.UIs"
             mc:Ignorable="d" Name="self" Title="Variable Table"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" >
            <Button DockPanel.Dock="Right" Margin="2" Click="Button_SaveAs_Click">Save As</Button>
            <Button DockPanel.Dock="Right" Margin="2" Click="Button_Save_Click">Save</Button>
            <Button DockPanel.Dock="Right" Margin="2,2,20,2" Click="Button_Open_Click">Open</Button>

            <StackPanel>
                <Label Foreground="Red">Only Support String yet. If save as CSV, DO CARE the Value should be no comma</Label>
                <Label Foreground="Red">This for inject variable into execution</Label>
            </StackPanel>
            
        </DockPanel>

        <DataGrid Name="dg" CanUserAddRows="True" CanUserDeleteRows="True" AutoGenerateColumns="False" ItemsSource="{Binding ElementName=self, Path=VariableItems}" AddingNewItem="dg_AddNewItem">
        </DataGrid>
    </DockPanel>
</Window>
