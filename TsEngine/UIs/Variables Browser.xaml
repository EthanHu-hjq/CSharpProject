<Window x:Class="TsEngine.UIs.Variables_Browser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TsEngine.UIs"
             mc:Ignorable="d" Name="self"
             d:DesignHeight="450" d:DesignWidth="320">
    <GroupBox Header="File Globals. Support String and Numeric Only yet">
        <DataGrid IsReadOnly="True" ItemsSource="{Binding ElementName=self, Path=Variables}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}"></DataGridTextColumn>
                <DataGridTextColumn Header="Value" Binding="{Binding Value}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </GroupBox>
</Window>
