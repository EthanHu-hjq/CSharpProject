<Window x:Class="ApEngine.UIs.Reference"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ApEngine.UIs"
        mc:Ignorable="d" Topmost="True" Name="window"
        d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="{Binding ElementName=window, Path=Message}"/>
            <StatusBarItem HorizontalAlignment="Right" Foreground="Red">禁止附件重名。All Attachment files Name should not be same.</StatusBarItem>
        </StatusBar>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="btn_Open_Click"/>
                <MenuItem Header="Save As..." Click="SaveReference_Click"/>
                <!--<MenuItem Header="Exit"/>-->
            </MenuItem>
        </Menu>
        <DockPanel>
            <GroupBox DockPanel.Dock="Top" Header="General">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="2">
                    <StackPanel.Resources>
                        <Style TargetType="TextBox">
                            <Setter Property="Width" Value="40"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="2" />
                        </Style>
                    </StackPanel.Resources>

                    <StackPanel Orientation="Horizontal">
                        <Label>Valid Time:</Label>
                        <TextBox Text="{Binding ElementName=window, Path=ValidDay}"></TextBox>
                        <Label>Day</Label>
                        <TextBox Text="{Binding ElementName=window, Path=ValidHour}"></TextBox>
                        <Label>Hour</Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" ToolTip="The time prompt Warn before data expired">
                        <Label>Warn Time:</Label>
                        <TextBox Text="{Binding ElementName=window, Path=WarnDay}"></TextBox>
                        <Label>Day</Label>
                        <TextBox Text="{Binding ElementName=window, Path=WarnHour}"></TextBox>
                        <Label>Hour</Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label>Loop Times</Label>
                        <TextBox Text="{Binding ElementName=window, Path=ApReferenceData.LoopTime}"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label>Version</Label>
                        <Label Content="{Binding Version, ElementName=window}"/>
                    </StackPanel>
                    <!--<Button Margin="2" HorizontalAlignment="Right">Apply</Button>-->
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Golden Samples" Margin="2">
                <DataGrid CanUserAddRows="True" ItemsSource="{Binding ElementName=window, Path=Samples}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn MinWidth="100" Header="Serial No" Binding="{Binding}" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <UniformGrid Columns="2" Margin="2">
                <GroupBox Header="Import Files">
                    <DockPanel>
                        <CheckBox DockPanel.Dock="Top">Corece Absolute Path to Relative</CheckBox>
                        <DataGrid ItemsSource="{Binding ElementName=window, Path=ImportFiles}" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File Name" Binding="{Binding}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>
                <GroupBox Header="Export Files">
                    <DockPanel>
                        <CheckBox DockPanel.Dock="Top">Corece Absolute Path to Relative</CheckBox>
                        <DataGrid ItemsSource="{Binding ElementName=window, Path=ExportFiles}" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File Name" Binding="{Binding}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>
            </UniformGrid>
        </DockPanel>
    </DockPanel>
</Window>
