<UserControl x:Class="Toucan_WPF.Ctrls.Ctrl_Execution"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Toucan_WPF.Ctrls"
             xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             Dialog:DialogParticipation.Register="{Binding}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <UniformGrid x:Name="ug_Slots" Rows="{Binding SlotRows}" Columns="{Binding SlotColumns}">
        </UniformGrid>
        <StackPanel VerticalAlignment="Bottom">
            <TextBlock HorizontalAlignment="Center" FontSize="32" Foreground="#80FF0000" Text="{Binding WarningMessage}" Focusable="False" IsHitTestVisible="False"></TextBlock>
            <TextBlock HorizontalAlignment="Center" FontSize="64" Foreground="#90000000" Text="{Binding WaterPrint}" Focusable="False" IsHitTestVisible="False"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
