<UserControl x:Class="Robin.Ctrls.ProcessInjection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Robin.Ctrls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Background="AliceBlue">
        <DockPanel.Resources>
            <Style TargetType="TabItem"></Style>
        </DockPanel.Resources>
        <TabControl DockPanel.Dock="Top">
            <TabItem Header="On Script Start">
                <DockPanel DockPanel.Dock="Top">
                    <CheckBox DockPanel.Dock="Right">Enable</CheckBox>
                    <Label>Run Once When Initial the test</Label>
                </DockPanel>
            </TabItem>
            <TabItem Header="On Test Start">
                
            </TabItem>
            <TabItem Header="On Sequence Start">
                <DockPanel DockPanel.Dock="Top">
                    <CheckBox DockPanel.Dock="Top" HorizontalAlignment="Right">Enable</CheckBox>

                    <GroupBox Header="Misc">
                        <UniformGrid>
                            <UniformGrid.Resources>
                                <Style TargetType="Label">
                                    <Setter Property="Width" Value="80"/>
                                </Style>
                            </UniformGrid.Resources>
                            <DockPanel>
                                <Label>dBrG</Label>
                                <ComboBox></ComboBox>
                            </DockPanel>
                            <DockPanel>
                                <Label>Mic Cal</Label>
                                <ComboBox></ComboBox>
                            </DockPanel>
                            <DockPanel>
                                <Label>SenseR</Label>
                                <ComboBox></ComboBox>
                            </DockPanel>
                            <DockPanel>
                                <Label>Aux Out</Label>
                                <ComboBox></ComboBox>
                            </DockPanel>
                        </UniformGrid>
                    </GroupBox>
                </DockPanel>
            </TabItem>
            <TabItem Header="On Sequence Done">
                <DockPanel DockPanel.Dock="Top">
                    <CheckBox DockPanel.Dock="Right">Enable</CheckBox>
                    <Label>Run When each DUT finish testing</Label>
                </DockPanel>
            </TabItem>
            <TabItem Header="On Script Done">
                <DockPanel DockPanel.Dock="Top">
                    <CheckBox DockPanel.Dock="Right">Enable</CheckBox>
                    <Label>Run Once when all test complete, terminate the execution</Label>
                </DockPanel>
            </TabItem>
        </TabControl>
        <DockPanel>
            <GroupBox Header="Analog Output" DockPanel.Dock="Top">
                <Label>dBrG</Label>
            </GroupBox>
            <GroupBox Header="IO Setting" DockPanel.Dock="Top">
                <UniformGrid Columns="2">
                    <StackPanel>
                        <Label>XLR Connector, With Sense R, DO1, K1</Label>
                        <ComboBox>
                            <ComboBox.Items>
                                <ComboBoxItem>On</ComboBoxItem>
                                <ComboBoxItem>Off</ComboBoxItem>
                                <ComboBoxItem>NotCare</ComboBoxItem>
                            </ComboBox.Items>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel>
                        <Label>Phono Connector, Without Sense R, DO2, K2</Label>
                        <ComboBox>
                            <ComboBox.Items>
                                <ComboBoxItem>On</ComboBoxItem>
                                <ComboBoxItem>Off</ComboBoxItem>
                                <ComboBoxItem>NotCare</ComboBoxItem>
                            </ComboBox.Items>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel>
                        <Label>XLR Connector, DO3, K3</Label>
                        <ComboBox>
                            <ComboBox.Items>
                                <ComboBoxItem>On</ComboBoxItem>
                                <ComboBoxItem>Off</ComboBoxItem>
                                <ComboBoxItem>NotCare</ComboBoxItem>
                            </ComboBox.Items>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel>
                        <Label>Door/Process Indicator, DO4, K4</Label>
                        <ComboBox>
                            <ComboBox.Items>
                                <ComboBoxItem>On</ComboBoxItem>
                                <ComboBoxItem>Off</ComboBoxItem>
                                <ComboBoxItem>NotCare</ComboBoxItem>
                            </ComboBox.Items>
                        </ComboBox>
                    </StackPanel>
                </UniformGrid>
            </GroupBox>
            <GroupBox Header="Misc">
                <DockPanel>
                    <Label>CLI</Label>
                    <Button DockPanel.Dock="Right">...</Button>
                    <TextBox/>
                </DockPanel>
                
            </GroupBox>
        </DockPanel>
    </DockPanel>
</UserControl>
